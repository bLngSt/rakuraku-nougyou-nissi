<div class="schedule-calendar-header">
  <div class="left-header">
    <div class="header-title">
      <%= link_to "ようこそ" + current_user.name + "さん", edit_user_path(current_user) %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to '予定を登録する', new_schedule_path %>
    </div>
  </div>
</div>

<div class="calendar">
  <%= month_calendar events: @schedules do |date, schedules| %>
    <%= date.day %>
      <% schedules.each do |schedule| %>
        <div>
          <%= link_to schedule.work, schedule_path(schedule.id), method: :get, class: 'btn'%>
        </div>
      <% end %> 
  <% end %>
</div>